<div id="bg_layer"></div>
<div class="container-fluid">
<meta name="viewport" content="width=device-width, initial-scale=1">
  <div id="nav">
    <h3>Задачи</h3>
    <div class="reveal">
    <h3>+</h3>
    </div>
    <div class="help">
    <h4>?</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="tasks">

      <h6>Семья</h6><hr>
        <ul>
          <% @todos.order(:id).each do |todo| %>
                <% if todo.project.id == 1 then %>
                  <li><p>
                    <%= form_with(model: todo, local: true, :html => {:id=>'form2'}) do |form2| %>
                      <%= form2.check_box :isComplete,{:class=>'icheck-me', :'data-skin'=>"square", :"data-color"=>"blue"} %>
                      <%= link_to todo.text, todo, method: :delete, data: {confirm: "Вы действительно хотите удалить задачу?"} %>
                      <% end %>
                      </p>
                  </li>
                <% end %>
          <% end %>
        </ul>
      </div>
    </div>

  <div class="col-xs-12 col-sm-6 col-md-4">
    <div class="tasks">
    <h6>Работа</h6><hr>
    <ul>
      <% @todos.order(:id).each do |todo| %>
            <% if todo.project.id == 2 then %>
              <li>
                <div class="task">
                <%= form_with(model: todo, local: true, :html => {:id=>'form2'}) do |form2| %>
                  <%= form2.check_box :isComplete,{:class=>'icheck-me', :'data-skin'=>"square", :"data-color"=>"blue"} %>
                  <%= link_to todo.text, todo, method: :delete, data: {confirm: "Вы действительно хотите удалить задачу?"} %>
                  <% end %>
                </div>
              </li>
            <% end %>
      <% end %>
    </ul>
    </div>
  </div>

    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="tasks">
      <h6>Прочее</h6><hr>
      <ul>
        <% @todos.order(:id).each do |todo| %>
              <% if todo.project.id == 3 then %>
                <li><p>
                  <%= form_with(model: todo, local: true, :html => {:id=>'form2'}) do |form2| %>
                    <%= form2.check_box :isComplete,{:class=>'icheck-me', :'data-skin'=>"square", :"data-color"=>"blue"} %>
                    <%= link_to todo.text, todo, method: :delete, data: {confirm: "Вы действительно хотите удалить задачу?"} %>
                    <% end %>
                    </p>
                </li>
              <% end %>
        <% end %>
      </ul>
      </div>
    </div>
  </div>

  <div class="new_task">
    <%= render 'form', todo: @todo %>
  </div>
</div>

<div id="greeting">
  <h6 text-align: left>Добро пожаловать на TODO-Сайт</h6>
  <p text-align: left>Управление: Нажатие на ЧекБокс - выполнить задачу; Нажатие на саму задачу - ее удаление; Плюс справа - Добавить новую задачу</p>
  <h5 >Нажми сюда, чтобы войти!</h5>
</div>
