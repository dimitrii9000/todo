<p id="notice"><%= notice %></p>

<h1>Задачи</h1>


<h2>Семья</h2>
<ul>
  <% @todos.each do |todo| %>
        <% if todo.project.id == 1 then %>
          <li> <%= todo.text %>
            <%= link_to 'Удалить', todo, method: :delete %>
          </li>
        <% end %>
  <% end %>
</ul>

<h2>Работа</h2>
<ul>
<% @todos.each do |todo| %>
      <% if todo.project.id == 2 then %>
        <li> <%= todo.text %> <%= link_to 'Удалить', todo, method: :delete %></li>
      <% end %>
<% end %>

</ul>

<h2>Прочее</h2>
<ul>
<% @todos.each do |todo| %>
      <% if todo.project.id == 3 then %>
        <li> <%= todo.text %> <%= link_to 'Удалить', todo, method: :delete %></li>
      <% end %>
<% end %>
</ul>

<h2>Новая задача</h2>

<div class="reveal">
<p>+</p>
</div>

<div class="new_task">
  <%= render 'form', todo: @todo %>
  <div class="cancel">
    <p>Отмена</p>
  </div>
</div>












