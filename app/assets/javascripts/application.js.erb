$(document).ready(function(){
  $( "#project_id" ).select2({
    theme: "bootstrap"
  });
  $('#project_id').select2({
    minimumResultsForSearch: -1
  });
  $('div.new_task,#bg_layer').hide();
  $("div.reveal").click(function(){
    $('#bg_layer,div.new_task').show();
      });
  $("div.cancel").click(function(){
    $("div.new_task,#bg_layer").hide();
  });
});
$(document).on("click", "#Submit", function(){
   $("#form").submit();
});
